{
  "Routes": [
    //Catalog API
    {
      "DownstreamPathTemplate": "/api/v1/catalog",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8000"
        }
      ],
      "UpstreamPathTemplate": "/catalog",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "SwaggerKey": "catalog",
      "FileCacheOptions": { "TtlSeconds": 30 },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/v1/catalog/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8000"
        }
      ],
      "UpstreamPathTemplate": "/catalog/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ],
      "SwaggerKey": "catalog"

    },
    {
      "DownstreamPathTemplate": "/api/v1/catalog/category/{category}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8000"
        }
      ],
      "UpstreamPathTemplate": "/catalog/category/{category}",
      "UpstreamHttpMethod": [ "GET" ],
      "SwaggerKey": "catalog"
    },
    //Basket API
    {
      "DownstreamPathTemplate": "/api/v1/basket/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8001"
        }
      ],
      "UpstreamPathTemplate": "/basket/{userName}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ],
      "SwaggerKey": "basket"
    },
    {
      "DownstreamPathTemplate": "/api/v1/Basket",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8001"
        }
      ],
      "UpstreamPathTemplate": "/basket",
      "UpstreamHttpMethod": [ "POST" ],
      "SwaggerKey": "basket"
    },
    {
      "DownstreamPathTemplate": "/api/v1/basket/Checkout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8001"
        }
      ],
      "UpstreamPathTemplate": "/basket/checkout",
      "UpstreamHttpMethod": [ "POST" ],
      "SwaggerKey": "basket",
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "3s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    //Discount API
    {
      "DownstreamPathTemplate": "/api/v1/discount/{productName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8002"
        }
      ],
      "UpstreamPathTemplate": "/discount/{productName}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ],
      "SwaggerKey": "discount"
    },
    {
      "DownstreamPathTemplate": "/api/v1/discount",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8002"
        }
      ],
      "UpstreamPathTemplate": "/discount",
      "UpstreamHttpMethod": [ "PUT", "POST" ],
      "SwaggerKey": "discount"
    },
    //Order API
    {
      "DownstreamPathTemplate": "/api/v1/order/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "8004"
        }
      ],
      "UpstreamPathTemplate": "/order/{userName}",
      "UpstreamHttpMethod": [ "GET" ],
      "SwaggerKey": "order",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "catalog",
      "Config": [
        {
          "Name": "Catalog API",
          "Version": "v1",
          "Url": "http://host.docker.internal:8000/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "basket",
      "Config": [
        {
          "Name": "Basket API",
          "Version": "v1",
          "Url": "http://host.docker.internal:8001/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "discount",
      "Config": [
        {
          "Name": "Discount API",
          "Version": "v1",
          "Url": "http://host.docker.internal:8002/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "order",
      "Config": [
        {
          "Name": "Order API",
          "Version": "v1",
          "Url": "http://host.docker.internal:8004/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://host.docker.internal:5010"
  }
}